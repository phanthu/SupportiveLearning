<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Jasper JSP configuration -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>fork</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>xpoweredBy</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>compilerSourceVM</param-name>
            <param-value>1.7</param-value>
        </init-param>
        <init-param>
            <param-name>compilerTargetVM</param-name>
            <param-value>1.7</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <!-- The mappings for the JSP servlet -->
    <servlet>
        <servlet-name>AdminAjaxController</servlet-name>
        <servlet-class>com.apt.ajax.controller.AdminAjaxController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectAjaxController</servlet-name>
        <servlet-class>com.apt.ajax.controller.SubjectAjaxController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BatchAjaxController</servlet-name>
        <servlet-class>com.apt.ajax.controller.BatchAjaxController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAjaxController</servlet-name>
        <servlet-class>com.apt.ajax.controller.StudentAjaxController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitAjaxController</servlet-name>
        <servlet-class>com.apt.ajax.controller.SubmitAjaxController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxUpload</servlet-name>
        <servlet-class>com.apt.ajax.controller.AjaxUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignmentAjaxController</servlet-name>
        <servlet-class>com.apt.ajax.controller.AssignmentAjaxController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDownload</servlet-name>
        <servlet-class>com.apt.ajax.controller.ServletDownload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.jspx</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.apt.controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectController</servlet-name>
        <servlet-class>com.apt.controller.SubjectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BatchController</servlet-name>
        <servlet-class>com.apt.controller.BatchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>com.apt.controller.StudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignmentController</servlet-name>
        <servlet-class>com.apt.controller.AssignmentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitController</servlet-name>
        <servlet-class>com.apt.controller.SubmitController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectController</servlet-name>
        <url-pattern>/SubjectController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BatchController</servlet-name>
        <url-pattern>/BatchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/StudentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentController</servlet-name>
        <url-pattern>/AssignmentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitController</servlet-name>
        <url-pattern>/SubmitController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminAjaxController</servlet-name>
        <url-pattern>/AdminAjaxController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectAjaxController</servlet-name>
        <url-pattern>/SubjectAjaxController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BatchAjaxController</servlet-name>
        <url-pattern>/BatchAjaxController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAjaxController</servlet-name>
        <url-pattern>/StudentAjaxController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitAjaxController</servlet-name>
        <url-pattern>/SubmitAjaxController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxUpload</servlet-name>
        <url-pattern>/AjaxUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentAjaxController</servlet-name>
        <url-pattern>/AssignmentAjaxController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDownload</servlet-name>
        <url-pattern>/ServletDownload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
